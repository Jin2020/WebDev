<%- include("../partials/header") %>

	<header class="jumbotron">
		<div>
			<h1>Welcome To Yelpcamp!</h1>
		    <p>View our campgrounds from all over the world</p>
		    <p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
			</p>
			<p>
			    <form class="form-inline" action="/campgrounds" method="GET">
				    <div class="form-group">
					    <input class="form-control" type="text" name="search" placeholder="Campground Search...">
					    <input class="btn btn-default" type="submit" value="Search">
				    </div>	
			    </form>
			</p>
		</div>
    </header>
     <div class="col-md-12">
		  <% if(noMatch !== undefined) { %>
		  <h3><%= noMatch %></h3>
		  <% } %>
	</div>

	<div class="row text-center">
	    <% for (var i = 0; i < campgrounds.length; i++) { %>
	    <div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= campgrounds[i].image %>">
				<div class="caption">
					<h4><%= campgrounds[i].name %></h4>
				</div>
				<p>
					<a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
        </div>
        <% }; %>
	</div>
	
<%- include("../partials/footer") %>